.article-item{
  margin: 10px 0;
  border-bottom: 1px solid #ccc;
}
.ariticle-head{
  margin: 10px 0 10px 10px;
}
.article-head-avatar{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.article-head-date{
  color:#333;
  font-size: 16px;
  vertical-align: middle;
  margin-left: 10px;
}
.article-title{
  margin-left: 10px;
  font-size: 16px;
  font-weight: 600;
}
.article-img{
  margin: 10px 0;
  width: 100%;
  height: 400rpx;
}
.article-desc{
  margin-left: 10px;
  font-size: 14px;
  color: #333;
}
.article-footer{
  margin: 10px 0 10px 10px;
}
.article-footer-icon{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}
.article-footer-text{
  font-size: 14px;
  color:#333;
  margin: 0 10px 0 5px;
  vertical-align: middle;
}